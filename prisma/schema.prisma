generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}
// no userÂ´s model is created, it is not needed 
model Task {
  id String @id @unique @default(uuid())
  status CompletionStatus
  owner String 
  title String
  description String 
  completionDate DateTime 
  comments comments[]
  //connector does not support array of strings
  tags        String?
  responsible String?
}

model comments{
  id String @id @unique @default(uuid())
  message String 
  taksid String
  taks   Task @relation(fields: [taksid], references: [id])

}

enum CompletionStatus {
  Pending
  Ongoing
  Finished
}


